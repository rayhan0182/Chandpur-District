<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/coverphoto"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:scaleType="fitXY"
        android:src="@drawable/main_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <androidx.cardview.widget.CardView
        android:id="@+id/list_one"
        android:layout_width="90dp"
        android:layout_height="88dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/coverphoto"
        android:layout_marginTop="25sp"
        android:layout_marginLeft="68dp"
        app:cardCornerRadius="9sp"
        app:cardElevation="5dp"
        android:backgroundTint="#ffffff"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="15sp"
                android:src="@drawable/wikipedia"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="জেলা সম্পর্কিত তথ্য"
                android:textSize="10.5sp"
                android:gravity="center"
                android:textColor="#263B42"
                android:paddingHorizontal="8dp"
                />




        </LinearLayout>




    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/list_two"
        android:layout_width="90dp"
        android:layout_height="88dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/coverphoto"
        android:layout_marginTop="25sp"
        android:layout_marginLeft="250dp"
        android:layout_marginRight="85dp"
        app:cardCornerRadius="9sp"
        app:cardElevation="5dp"
        android:backgroundTint="#ffffff"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:src="@drawable/tour_spot"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="দর্শনীয় স্থান"
                android:textSize="11dp"
                android:gravity="center"
                android:textColor="#263B42"
                android:paddingHorizontal="8dp"

                />




        </LinearLayout>




    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/list_three"
        android:layout_width="90dp"
        android:layout_height="88dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="85dp"
        app:layout_constraintTop_toBottomOf="@id/list_one"
        android:layout_marginRight="85dp"
        app:cardCornerRadius="9sp"
        app:cardElevation="5dp"
        android:backgroundTint="#ffffff"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:src="@drawable/fish"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="ইলিশের বাজার"
                android:textSize="11dp"
                android:gravity="center"
                android:textColor="#263B42"
                android:paddingHorizontal="8dp"
                />




        </LinearLayout>




    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>